<!-- Form for user's preferences: colors & polices -->
<%= form_for(@custom) do |f| %>
       
    <%= f.hidden_field :color_text_card, :value => "#ffffff" %> 
    <%= f.hidden_field :color_bground, :value => "#f4ebdd" %>
    <%= f.hidden_field :color_lines, :value => "#cfc5b6" %>
    <%= f.hidden_field :color_text_lines, :value => "#a25147"%>
    <%= f.hidden_field :color_card, :value => "#3d4c5b" %> 
    <%= f.hidden_field :color_button, :value => "#3d4c5b" %>
    <%= f.hidden_field :color_title, :value => "#3d4c5b"%>
    
    <%= image_submit_tag "theme_beige.png", :class => "theme_pict" %><br/>
    Beige

<% end %>