<%
  if !user.nil? # Problem with user ?
    color_text_card   = user.customization.color_text_card   || "#ffffff"
    color_bground     = user.customization.color_bground     || "#49aef5"
    color_lines       = user.customization.color_lines       || "#3c759f"
    color_text_lines  = user.customization.color_text_lines  || "#08304d"
    color_card        = user.customization.color_card        || "#3c759f"
    color_button      = user.customization.color_button      || "#08304d"
    color_title       = user.customization.color_title       || "#08304d"
    color_field_title = user.customization.color_field_title || "#08304d"

    font_title        = user.customization.font_title        || "Century Gothic"
    font_card         = user.customization.font_card         || "Century Gothic"
    font_lines        = user.customization.font_lines        || "Century Gothic"
    font_field_title  = user.customization.font_field_title  || "Century Gothic"

  else
    color_text_card   = "#ffffff"
    color_bground     = "#49aef5"
    color_lines       = "#3c759f"
    color_text_lines  = "#08304d"
    color_card        = "#3c759f"
    color_button      = "#08304d"

    font_title = "Century Gothic"
    font_card  = "Century Gothic"
    font_lines = "Century Gothic"
  end
%>
<style type="text/css">
  

body{
  height:100%;
  width:100%;
    color:<%= color_text_card %>; /* Couleur personnalisable TEXTE_CARTE */
    font-size:14px;
    <% if user.customization.img_background? %>
       background-image: url("<%= user.customization.img_background.to_s %>");
       <% if user.customization.background_mosaic %> /* user choose to use mosaic option */
         background-repeat: repeat;
       <% else %>      
         background-repeat:no-repeat;
         background-color: <%= color_bground %>; /* Couleur personnalisable FOND */
       <% end %>
       background-position : center center;
       background-attachment: fixed ;      
    <% else %>
       background: <%= color_bground %>; /* Couleur personnalisable FOND */
    <% end %>
    margin:0px;
    padding:0px;

}



/*=============================*/
/*======= Barre du haut =======*/
/*=============================*/

#topbar{
  position:fixed;
  min-width:1024px;
    top:0px;
    left:0px;
    right:0px;
    height:54px;
    padding-left: 15px;
  -moz-box-shadow:0px 0px 5px #000000;
  -webkit-box-shadow:0px 0px 5px #000000;
  box-shadow: 0px 0px 5px #000000;
    /* Internet Explorer 5.5 - 7 */
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=<%= color_bground %>, endColorstr=<%= color_lines %>);
  /* Internet Explorer 8 */
  -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr=<%= color_bground %>, endColorstr=<%= color_lines %>)";
  /* Mozilla Firefox */
  background-image: -moz-linear-gradient(
    top,
    <%= color_bground %>, /* Couleur personnalisable BARRES */
    <%= color_lines %> /* Couleur personnalisable FOND */
  );
  /* Safari, Google Chrome... */
  background-image: -webkit-gradient(
    linear,
    left top, left bottom,
    from(<%= color_bground %>), /* Couleur personnalisable BARRES */
    to(<%= color_lines %>) /* Couleur personnalisable FOND */
  );
}

/* Liens vers les différentes "parties" de la carte de visite (Home, Online Resume, About, Contact) */
.topbar_link{
    float:left;
    padding-top: 20px;
    padding-left: 5px;
    font-family:<%= font_lines %>, Helvetica, sans-serif; /* Police personnalisable POLICE_BARRES */
    font-size:16px;
    color:<%= color_text_lines %>; /* Couleur personnalisable TEXTE_BARRES */
    text-decoration:none;
}

/* Icones correspondantes aux liens explicités précédemment */
.icone_topleft{
    height:32px;
    width:32px;
    border:none;
  	/* Mozilla Firefox */
    -moz-border-radius:5px;
    background-image: -moz-linear-gradient(
    top,
    <%= color_bground %>, /* Couleur personnalisable FOND */
    <%= color_lines %> /* Couleur personnalisable BARRES */
    );
    /* Safari, Google Chrome... */
    -webkit-border-radius:5px;
    background-image: -webkit-gradient(
    linear,
    left top, left bottom,
    from(<%= color_bground %>), /* Couleur personnalisable FOND */
    to(<%= color_lines %>) /* Couleur personnalisable BARRES */
    );
    /* Autres navigateurs dont IE9 */
    border-radius:5px;
    /* Internet Explorer 5.5 - 7 */
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=<%= color_bground %>, endColorstr=<%= color_lines %>);
    /* Internet Explorer 8 */
    -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr=<%= color_bground %>, endColorstr=<%= color_lines %>)";
    float:left;
    margin-top: 13px;
    margin-left: 20px;
}
    
 /* Champ de texte où les codes de confidentialité peuvent être saisis */
.topbar_textfield{
    float:left;
    margin-top: 18px;
    margin-left: 5px;
}
/* Notices à l'utilisateur (log in successful, switch to ... mode, to unlock protected informations ask me) - Début */
